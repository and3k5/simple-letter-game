{
    "include": ["src/**/*.ts", "src/**/*.vue"],
    "exclude": ["vite.config.ts", "node_modules"],
    "compilerOptions": {
        "moduleResolution": "node",
        "noEmit": true,
        "target": "es2020",
        "module": "es2020",
        "esModuleInterop": true,
        "paths": {
            "@/*": ["./src/*"],
        }
    }
}