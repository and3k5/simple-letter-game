{
    "include": ["src/**/*.ts"],
    "exclude": ["vite.config.ts", "node_modules"],
    "compilerOptions": {
        "moduleResolution": "node",
        "noEmit": true,
        "target": "es2020",
        "module": "es2020",
        "esModuleInterop": true,
        "paths": {
            "@/*": ["./src/*"],
            "@tetris/core": ["../core/src/index.ts"],
            "@tetris/core/*": ["../core/src/*"]
        }
    }
}