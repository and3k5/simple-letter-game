{
    "include": ["src/**/*.ts", "src/**/*.vue"],
    "exclude": ["vite.config.ts", "node_modules", "**/__tests__/**/*"],
    "compilerOptions": {
        "moduleResolution": "node",
        "noEmit": true,
        "target": "es2020",
        "module": "es2020",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["vite/client"],
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
